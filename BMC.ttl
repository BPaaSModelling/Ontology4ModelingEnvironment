#--- to be added to ModellingLanguageOntology.ttl
lo:BMC
  rdf:type lo:ModelingLanguage ;
  lo:hasModelingView lo:BMCModelingView ;
  rdfs:label "SAP Scene" ;
.
lo:BMCModelingView
  rdf:type lo:ModelingView ;
  lo:isMainModelingView "true"^^xsd:boolean ;
  lo:viewIsPartOfModelingLanguage lo:BMC ;
  rdfs:label "BMC Modeling View" ;
.

#--- to be added to PaletteOntology.ttl
po:BMCElements
    rdf:type po:PaletteCategory ;
    po:paletteCategoryIsShownInModelingView lo:BMCModelingView ;
    rdfs:label "Business Model Canvas Elements" ;
.

#template for a x BMCObject e.g. a post-it
BMC:BMCObject
  rdf:type owl:Class ;
  rdfs:label "BMCObject" ;
  rdfs:subClassOf lo:ModelingElement ;
.
po:DefaultBackgroundBMC
  rdf:type po:PaletteElement ;
  po:paletteConstructBelongsToModelingView lo:BMCModelingView ; #BMCModelling view instead of SapSceneModelling view
  po:paletteConstructHasHeight 70 ;
  po:paletteConstructHasModelImage "BMCObject.PNG" ; #To be created
  po:paletteConstructHasPaletteThumbnail "Thumbnail_BMCObject.PNG" ; #To be created
  # po:paletteConstructHasParentPaletteConstruct po:Background ; as we do not need to have it under SapScene's po:Background
  po:paletteConstructHasWidth 100 ;
  po:paletteConstructIsGroupedInPaletteCategory po:BMCElements ; #po:SAPScenesElements replaced with po:BMCElements
  po:paletteConstructIsHiddenFromPalette "false"^^xsd:boolean ;
  po:paletteConstructIsRelatedToModelingLanguageConstruct sapscenes:DefaultBackground ;
  rdfs:label "DefaultBackgroundBMC" ;
.

#Default background is the BMC model, it is not needed to have a subclass of the SapScene Background

BMC:DefaultBackground
  rdf:type owl:Class ;
  rdfs:label "DefaultBackground" ;
  rdfs:subClassOf lo:ModelingElement ;
  .

po:DefaultBackgroundBMC
  rdf:type po:PaletteElement ;
  po:paletteConstructBelongsToModelingView lo:BMCModelingView ; #BMCModelling view instead of SapSceneModelling view
  po:paletteConstructHasHeight 70 ;
  po:paletteConstructHasModelImage "BMC.PNG" ; #To be created
  po:paletteConstructHasPaletteThumbnail "Thumbnail_BMC.PNG" ; #To be created
  po:paletteConstructHasParentPaletteConstruct po:Background ;
  po:paletteConstructHasWidth 100 ;
  po:paletteConstructIsGroupedInPaletteCategory po:BMCElements ; #po:SAPScenesElements replaced with po:BMCElements
  po:paletteConstructIsHiddenFromPalette "false"^^xsd:boolean ;
  po:paletteConstructIsRelatedToModelingLanguageConstruct sapscenes:DefaultBackground ;
  rdfs:label "DefaultBackgroundBMC" ;
.
